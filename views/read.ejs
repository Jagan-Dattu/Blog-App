<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6 min-h-screen">

  <!-- Header -->
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-800">All Users</h1>
    <a href="/" class="text-blue-600 underline text-lg">Create New</a>
  </div>

  <!-- User Cards -->
  <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <% users.forEach(user => { %>
      <div class="bg-white shadow-md rounded-lg p-4 flex flex-col justify-between">
        <img src="<%= user.image %>" alt="User Image" class="w-full h-48 object-cover rounded mb-4 border" 
          onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'" />
        <div>
          <h2 class="text-xl font-semibold text-gray-800 mb-1"><%= user.name %></h2>
          <p class="text-gray-600"><strong>Contact:</strong> <%= user.contact %></p>
          <p class="text-gray-600"><strong>Email:</strong> <%= user.email %></p>
          
          <!-- Edit/Delete links INSIDE the card, right below email -->
          <div class="mt-2 space-x-4 text-sm">
            <a href="/edit/<%= user._id %>" class="text-blue-500 hover:underline">Edit</a>
            <a href="/delete/<%= user._id %>" class="text-red-500 hover:underline"
               onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
            <a href="/new" class="text-blue-500 hover:underline">write a story</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
